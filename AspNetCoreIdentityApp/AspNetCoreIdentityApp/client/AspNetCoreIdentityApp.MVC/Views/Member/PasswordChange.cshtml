@using AspNetCoreIdentityApp.MVC.Models.ViewModels
@model PasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Şifre Yenileme</h2>

        @if (TempData["SuccessMessage"] is not null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <form asp-action="PasswordChange" asp-controller="Member" method="post">
            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label"></label>
                <input type="password" class="form-control" asp-for="OldPassword">
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input type="password" class="form-control" asp-for="NewPassword">
            </div>
            <div class="mb-3">
                <label asp-for="NewPasswordConfirm" class="form-label"></label>
                <input type="password" class="form-control" asp-for="NewPasswordConfirm">
            </div>

            <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
        </form>

    </div>
</div>



