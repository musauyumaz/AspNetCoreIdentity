@using AspNetCoreIdentityApp.MVC.Areas.Admin.Models.ViewModels
@model List<UserViewModel>
@{
    ViewData["Title"] = "UserList";
}

<h1>Üye Listesi</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Role İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <user-role-names user-id="@user.Id"></user-role-names>
                </td>
                <td><a class="btn btn-sm btn-dark my-1" asp-area="Admin" asp-controller="Role" asp-action="AssignRoleToUser" asp-route-id="@user.Id">Role Ata</a></td>
            </tr>
        }
</table>
