@model AspNetCoreIdentityApp.MVC.Areas.Admin.Models.DTOs.UpdateRoleDTO

@{
    ViewData["Title"] = "Update";
}



<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Role Güncelleme</h2>
        @if (TempData["SuccessMessage"] is not null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Güncelle" class="btn btn-warning" />
            </div>
        </form>

        <div>
            <a asp-action="Index">Role Listesine Geri Dön</a>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
