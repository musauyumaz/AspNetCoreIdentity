@using AspNetCoreIdentityApp.MVC.Areas.Admin.Models.ViewModels
@model Dictionary<string, AssignRoleToUserViewModel>
@{
    ViewData["Title"] = "AssignRoleToUser";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>
        <form asp-area="Admin" asp-action="AssignRoleToUser" method="post">
            <input type="hidden" name="UserId" value="@ViewBag.userId" />
            @foreach (var item in Model)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" name="SelectedRoles" value="@item.Value.Name" @(item.Value.Exists ? "checked" : "") />
                    <label class="form-check-label">@item.Value.Name</label>
                </div>
            }
            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-area="Admin" asp-controller="Home" asp-action="UserList">Kullanıcı listesine geri dön</a>
        </div>
    </div>
</div>
